@model IEnumerable<RoadTex.Models.RolesModules>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Roles.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modules.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAccess)
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Roles.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modules.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsAccess)
        </td>
